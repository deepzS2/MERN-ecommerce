{
  "presets": ["@babel/preset-typescript", "@babel/env"],
  "plugins": [
    "@babel/proposal-class-properties",

    // Module resolver
    ["module-resolver", {
      "alias": {
        "@": ["./src"],
        "@controllers/*": ["./src/controllers/*"],
        "@database/*": ["./src/database/*"],
        "@services/*": ["./src/services/*"],
        "@utils/*": ["./src/utils/*"]
      }
  }]
]
}